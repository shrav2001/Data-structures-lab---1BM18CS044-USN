void push(int *top,int ele,int s[10])
{
if(top>=100)
{
printf("stack overflow\n");
return;
}
*top=*top+1;
s[*top]=ele;
}
void display(int s[10],int top)
{
if(top<=-1)
{
printf("stack is empty\n");
return;
}
printf("the elements are");
for(int i=top;i>0;i--)
printf("%d\n",s[i]);
}
void arrange(int s[10],int *top1)
{
int i,temp;
if(*top<=-1)
{
printf("the stack is empty\n");
return;
}
for(i=top;i>0;i--)
{
if(s[top]<s[i])
{
temp=s[top];
s[top]=s[i];
s[i]=temp;
}
top=top-1;
}
}

